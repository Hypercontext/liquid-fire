{{#if containerless}}
  <LiquidVersions
    @value={{value}}
    @use={{use}}
    @rules={{rules}}
    @matchContext={{forwardMatchContext}}
    @versionEquality={{versionEquality}}
    @renderWhenFalse={{true}}
    @class={{class}} as |version|
  >
    {{~#if has-block}}
      {{~yield version~}}
    {{else}}
      {{~version~}}
    {{/if~}}
  </LiquidVersions>
{{else}}
  <LiquidContainer
    @id={{containerId}}
    @class={{class}}
    @growDuration={{growDuration}}
    @growPixelsPerSecond={{growPixelsPerSecond}}
    @growEasing={{growEasing}}
    @shrinkDelay={{shrinkDelay}}
    @growDelay={{growDelay}}
    @enableGrowth={{enableGrowth}} as |container|
  >
    <LiquidVersions
      @value={{value}}
      @notify={{container}}
      @use={{use}}
      @rules={{rules}}
      @matchContext={{forwardMatchContext}}
      @versionEquality={{versionEquality}}
      @renderWhenFalse={{true}} as |version|
    >
      {{~#if has-block}}
        {{~yield version~}}
      {{else}}
        {{~version~}}
      {{/if~}}
    </LiquidVersions>
  </LiquidContainer>
{{/if}}